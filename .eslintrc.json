{
  "env": {
    "browser": true,
    "es6": true,
    "mocha": true
  },
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module"
  },
  "plugins": [
    "chai-friendly"
  ],
  "globals": {
    "chrome": true,
    "require": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:import/errors",
    "plugin:import/warnings"
  ],
  "rules": {
    "indent": [2, 2],
    "eol-last": 2,
    "no-trailing-spaces": 2,
    "comma-dangle": [2, {
      "arrays": "always-multiline",
      "objects": "always-multiline",
      "imports": "always-multiline",
      "exports": "always-multiline",
      "functions": "always-multiline"
    }],
    "camelcase": [2, { "properties": "never" }],
    "no-plusplus": [2, { "allowForLoopAfterthoughts": true}],
    "quotes": [2, "single", {"avoidEscape": true}],
    "strict": [2, "global"],
    "arrow-parens": [2, "as-needed"],
    "one-var": [2, "never"],
    "prefer-template": 2,
    "consistent-return": 2,
    "no-lonely-if": 2,
    "no-else-return": 2,
    "eqeqeq": 2,
    "radix": 2,
    "no-var": 2,
    "curly": 2,
    "brace-style": 2,
    "dot-notation": 2,
    "prefer-const": 2,
    "prefer-reflect": 2,
    "no-console": 2,
    "prefer-arrow-callback": 2,
    "no-confusing-arrow": 2,
    "arrow-spacing": 2,
    "no-alert": 2,
    "no-eval": 2,
    "no-unsafe-finally": 2,
    "no-param-reassign": 2,
    "guard-for-in": 2,
    "no-caller": 2,
    "no-shadow": 2,
    "comma-style": 2,
    "comma-spacing": 2,
    "no-bitwise": 2,
    "no-self-compare": 2,
    "no-nested-ternary": 2,
    "no-octal-escape": 2,
    "semi": 2,
    "unicode-bom": 2,
    "wrap-iife": 2,
    "no-throw-literal": 2,
    "no-iterator": 2,
    "no-native-reassign": 2,
    "no-script-url": 2,
    "no-return-assign": 2,
    "yoda": 2,
    "no-loop-func": 2,
    "no-sequences": 2,
    "no-new-func": 2,
    "no-implied-eval": 2,
    "no-catch-shadow": 2,
    "no-invalid-this": 2,
    "semi-spacing": 2,
    "no-labels": 2,
    "no-proto": 2,
    "no-void": 2,
    "no-with": 2,
    "new-cap": 2,
    "no-ternary": 2,
    "accessor-pairs": 2,
    "no-div-regex": 2,
    "array-callback-return": 2,
    "max-len": [2, 512],
    "prefer-spread": 2,
    "prefer-rest-params": 2,
    "no-eq-null": 2,
    "no-restricted-syntax": [2, "SwitchStatement", "YieldExpression"],
    "quote-props": [2, "as-needed"],
    "no-floating-decimal": 2,
    "no-extra-bind": 2,
    "object-shorthand": 2,
    "no-multi-str": 2,
    "no-extend-native": 2,
    "no-useless-call": 2,
    "no-useless-escape": 2,
    "no-undef-init": 2,
    "no-undefined": 2,
    "linebreak-style": 2,
    "no-continue": 2,
    "no-new-object": 2,
    "consistent-this": 2,
    "no-spaced-func": 2,
    "no-underscore-dangle": 0,
    "no-mixed-operators": 2,
    "new-parens": 2,
    "no-new-wrappers": 2,
    "no-unmodified-loop-condition": 2,
    "no-whitespace-before-property": 2,
    "no-negated-condition": 2,
    "no-implicit-coercion": 2,
    "no-lone-blocks": 2,
    "operator-assignment": 2,
    "no-useless-computed-key": 2,
    "no-useless-constructor": 2,
    "no-useless-rename": 2,
    "no-unused-expressions": 0,
    "chai-friendly/no-unused-expressions": 2,
    "no-shadow-restricted-names": 2,
    "no-array-constructor": 2,
    "one-var-declaration-per-line": 2,
    "no-duplicate-imports": 2,
    "require-yield": 2,

    "rest-spread-spacing": 2,
    "template-curly-spacing": 2,
    "yield-star-spacing": 2,
    "no-multiple-empty-lines": 2,
    "array-bracket-spacing": 2,
    "block-spacing": 2,
    "computed-property-spacing": 2,
    "key-spacing": 2,
    "operator-linebreak": 2,
    "space-unary-ops": 2,
    "generator-star-spacing": 2,
    "space-infix-ops": 2,
    "space-in-parens": 2,
    "keyword-spacing": 2,
    "space-before-blocks": 2,
    "object-curly-spacing": 2,
    "object-property-newline": [2, {"allowMultiplePropertiesPerLine": true}],
    "space-before-function-paren": [2, {"anonymous": "always", "named": "never"}],
    "spaced-comment": 2,

    "max-depth": 0,
    "no-magic-numbers": [0, {"ignore": [0, 1, 2, 3]}],
    "no-use-before-define": 0,
    "no-implicit-globals": 0,
    "no-warning-comments": 0,

    "wrap-regex": 0,
    "no-restricted-imports": 0,
    "dot-location": 0,
    "no-prototype-builtins": 0,
    "no-empty-function": 0,
    "arrow-body-style": 0,
    "func-names": 0,
    "newline-per-chained-call": 0,

    "lines-around-comment": 0,
    "no-inline-comments": 0,
    "padded-blocks": 0,
    "newline-before-return": 0,
    "newline-after-var": 0,
    "object-curly-newline": 0,
    "no-multi-spaces": 0,
    "no-useless-concat": 0,
    "func-style": 0,
    "id-blacklist": 0,
    "id-length": 0,
    "id-match": 0,
    "jsx-quotes": 0,
    "no-restricted-globals": 0,
    "complexity": 0,
    "max-nested-callbacks": 0,
    "max-params": 0,
    "max-statements": 0,
    "max-statements-per-line": 0,
    "max-lines": 0,
    "require-jsdoc": 0,
    "no-unneeded-ternary": 0,
    "no-extra-parens": 0,
    "no-new": 0,
    "sort-imports": 0,
    "sort-vars": 0,
    "default-case": 0,
    "valid-jsdoc": 0,
    "vars-on-top": 0,
    "no-extra-label": 0,
    "no-label-var": 0,
    "init-declarations": 0,
    "block-scoped-var": 0

  }
}
